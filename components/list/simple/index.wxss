.list-simple{
  width: 90%;
  padding: 0 5%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  color: #333;
  font-size: 32rpx;
}

.list-simple-icon{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.list-simple-txt{
  display: inline-block;
  vertical-align: middle;
}
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-30%);
    z-index: -10;
  }
  to{
    opacity: 1;
    transform: translateY(0%)
  }
}