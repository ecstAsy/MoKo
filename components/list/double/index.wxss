.list-simple {
  width: 90%;
  padding: 24rpx 5%;
  background: #fff;
  color: #333;
  font-size: 32rpx;
}

.list-simple-txt {
  display: block;
  width: 100%;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-30%);
    z-index: -10;
  }

  to {
    opacity: 1;
    transform: translateY(0%);
  }
}

.list-simple-intro {
  display: block;
  width: 100%;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(189, 199, 210, 1);
  margin-top: 10rpx;
}
