.tab-click{
  padding-top: 108rpx;
}
.tab{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  display: flex;
  flex-direction: row;
  z-index: 999;
}
.tab_list{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

.tab_slider{
   position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #09a8bc;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.content{
  width: 90%;
  padding: 0 5%;
}