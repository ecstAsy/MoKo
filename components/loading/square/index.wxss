.loading_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 1000;
}
.loading_rotate_cube_parent {
  perspective: 20;
  -webkit-perspective: 20;
}

.loading_rotate_cube {
  width: 40rpx;
  height: 40rpx;
  background: #09a8bc;
  margin: 50% auto;
  -webkit-animation: rotate_cube 1s ease-out infinite;
  animation: rotate_cube 1s ease-out infinite;
}

@-webkit-keyframes rotate_cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}

@keyframes rotate_cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}
